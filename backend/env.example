# Copy this file to .env and fill in your values

# Supabase
SUPABASE_URL=your-supabase-url-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret
DATABASE_URL=postgresql://postgres:your-password@db.xxx.supabase.co:5432/postgres

# Application
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000
RELEASE_VERSION=1.12.0

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Used for encrypting OAuth tokens and sensitive data
ENCRYPTION_KEY=

# Sentry (Error Tracking)
# Get your DSN from https://sentry.io
SENTRY_DSN=

# Inngest (Workflow Orchestration)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=
# Feature flags for Inngest (comma-separated list of enabled features)
# Options: research, preparation, followup, contacts, followup_actions, knowledge_base
INNGEST_ENABLED_FEATURES=research,preparation,followup,contacts,followup_actions,knowledge_base

# AI APIs
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
VOYAGE_API_KEY=
DEEPGRAM_API_KEY=

# Vector Database
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
# v2 Pricing (December 2025)
STRIPE_PRICE_LIGHT_SOLO=price_xxx
STRIPE_PRICE_UNLIMITED_SOLO=price_yyy
STRIPE_DONATION_LINK=https://buy.stripe.com/xxx

# Credit Packs (v4)
STRIPE_PRICE_CREDIT_PACK_100=price_xxx  # €14.95 for 100 credits
STRIPE_PRICE_CREDIT_PACK_300=price_xxx  # €39.95 for 300 credits
STRIPE_PRICE_CREDIT_PACK_600=price_xxx  # €69.95 for 600 credits

# Stripe Connect (Affiliate Program)
STRIPE_CONNECT_CLIENT_ID=ca_xxx

# Affiliate Program
AFFILIATE_AUTO_APPROVE=true  # Set to false for manual review

# Legacy (deprecated, kept for existing subscribers)
STRIPE_PRICE_SOLO_MONTHLY=
STRIPE_PRICE_SOLO_YEARLY=
